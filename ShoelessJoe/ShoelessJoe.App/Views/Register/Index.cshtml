@model ShoelessJoe.App.Models.MultiModels.RegisterIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<div asp-validation-summary="All" class="text-danger" style="margin: 0 auto"></div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Register</h1>
            <form asp-action="Register" method="post">
                <input class="form-control" asp-for="RegisterViewModel.FirstName" placeholder="@Html.DisplayNameFor(a => a.RegisterViewModel.FirstName)" />
                <input class="form-control" asp-for="RegisterViewModel.LastName" placeholder="@Html.DisplayNameFor(a => a.RegisterViewModel.LastName)" />
                <input class="form-control" asp-for="RegisterViewModel.Email" placeholder="@Html.DisplayNameFor(a => a.RegisterViewModel.Email)" />
                <input class="form-control" asp-for="RegisterViewModel.PhoneNumb" placeholder="@Html.DisplayNameFor(a => a.RegisterViewModel.PhoneNumb)" />
                <input class="form-control" asp-for="RegisterViewModel.Password" placeholder="@Html.DisplayNameFor(a => a.RegisterViewModel.Password)" />
                <input class="form-control" asp-for="RegisterViewModel.ConfirmPassword" placeholder="@Html.DisplayNameFor(a => a.RegisterViewModel.ConfirmPassword)" />

                <button class="btn btn-primary" type="submit">Register</button>
            </form>
        </div>

        <div class="col-md-6">
            <h1>Login</h1>
            <form asp-action="Login" method="post">
                <input class="form-control" asp-for="LoginViewModel.Email" placeholder="@Html.DisplayNameFor(a => a.LoginViewModel.Email)" />
                <input class="form-control" asp-for="LoginViewModel.Password" placeholder="@Html.DisplayNameFor(a => a.LoginViewModel.Password)" />

                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>